[colors]
;background = ${xrdb:color0:#222}
;background = #222
background = #dfdfdf
background-alt = #aaa
;foreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground = #222
foreground-alt = #aaa
primary = #ffb52a
secondary = #ffb52a
alert = #bd2c40

[bar/mybar]
monitor = HDMI-1
width = 60%
height = 30
offset-x = 20%
offset-y = 30
radius = 15
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 4

module-margin-left = 1
module-margin-right = 2

font-0 = Roboto:pixelsize=10
font-2 = fixed:pixelsize=10
font-1 = FontAwesome:style=Regular
font-3 = unifont:fontformat=truetype:size=8:antialias=false;0
;font-4 = siji:pixelsize=10;1

modules-left = workspaces
modules-center = music
modules-right = pulseaudio memory date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
